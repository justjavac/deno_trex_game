{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --watch main.ts"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-window"]
    }
  },
  "imports": {
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "esbuild": "https://deno.land/x/esbuild@v0.25.3/wasm.js"
  }
}
